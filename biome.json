{
    "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
    "formatter": {
        "enabled": true,
        "lineWidth": 120,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineEnding": "lf"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": "info"
        }
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "overrides": [
        {
            "includes": [
                "src/server/**/*.ts"
            ],
            "linter": {
                "rules": {
                    "correctness": {
                        "useHookAtTopLevel": "off"
                    }
                }
            }
        }
    ]
}
