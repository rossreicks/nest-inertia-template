{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src/server",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "views",
                "watchAssets": true,
                "outDir": "dist/src/server"
            }
        ]
    }
}
